#include<stdio.h>
void main ()
{
    float length, width, area, permimeter;
    printf ("enter the length of the rectangle:");
    scanf ("%f", & length);
    printf ("enter the width of the rectangle:");
    scanf ("%f", & width);
     area = length * width;
     permimeter = 2 * (length + width);
     printf ("area of the rectangle = %f\n", area);
     printf ("perimeter of the rectangle = %f\n", permimeter);
}
